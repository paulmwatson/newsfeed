<div class="has-text-centered has-background-white-bis is-box-shadow-inset mb-0">
  <div class="container is-max-width-30em">
    <%= link_to back_url, class: 'is-pulled-left has-text-grey is-height-24px is-width-24px on-hover-has-text-link' do %>
    <span class="icon is-height-100percent is-width-100percent">
      <i class="fas fa-chevron-left"></i>
    </span>
    <% end %>
    <div class="is-pulled-right is-height-24px is-width-24px"></div>
    <h1 class="title is-size-5 pb-4 pt-4 is-display-block">
      <%= t('headings.sign_up') %>
    </h1>
  </div>
</div>
<div class="container is-max-width-30em">
  <section class="section">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="field has-text-left">
      <%= f.label :email, class: 'label' %>
      <%= render 'shared/field_error', errors: resource.errors[:email] %>
      <div class="control">
        <%= f.email_field :email, autocomplete: 'email', class: 'input', autofocus: true, required: true %>
      </div>
    </div>

    <div class="field has-text-left">
      <%= f.label :password, class: 'label' %>
      <% if @minimum_password_length %>
      <p class="help"><%= t('info.password_minimum', minimum: @minimum_password_length) %></p>
      <% end %>
      <%= render 'shared/field_error', errors: resource.errors[:password] %>
      <div class="control">
        <%= f.password_field :password, autocomplete: 'new-password', class: 'input', required: true %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit t('buttons.sign_up'), class: 'button is-success is-pulled-right' %>
    </div>
    <% end %>
  </section>
</div>