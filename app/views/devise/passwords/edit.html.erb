<h1 class="title is-size-5 mb-0 has-text-centered has-background-white-bis pt-4 pb-4 is-box-shadow-inset">
  <%= t('headings.change_password') %>
</h1>
<div class="container is-max-width-30em">
  <section class="section">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, t('fields.new_password'), class: 'label' %>
      <% if @minimum_password_length %>
      <p class="help"><%= t('info.password_minimum', minimum: @minimum_password_length) %></p>
      <% end %>
      <%= render 'shared/field_error', errors: resource.errors[:password] %>
      <div class="control">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'input' %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: 'label' %>
      <%= render 'shared/field_error', errors: resource.errors[:password_confirmation] %>
      <div class="control">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit t('buttons.save_new_password'), class: 'button is-success is-pulled-right' %>
    </div>
    <% end %>
  </section>
</div>