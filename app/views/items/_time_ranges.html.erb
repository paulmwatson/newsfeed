<div class="dropdown is-hoverable navbar-item is-up">
  <div class="dropdown-trigger">
    <button class="button has-icon is-outlined is-dark is-small" aria-haspopup="true" aria-controls="dropdown-user">
      <span class="icon">
        <i class="fa fa-clock"></i>
      </span>
      <span class="is-hidden-mobile">
        Last <%= params[:hours] || '24' %> hours
      </span>
      <span class="icon is-small">
        <i class="fas fa-angle-up" aria-hidden="true"></i>
      </span>
    </button>
  </div>
  <div class="dropdown-menu" id="dropdown-user" role="menu">
    <div class="dropdown-content">
      <% %w[24 48 72].each do |hours| %>
      <a class="dropdown-item" href="?hours=<%= hours %>">
        Last <%= hours %> hours
      </a>
      <% end %>
    </div>
  </div>
</div>